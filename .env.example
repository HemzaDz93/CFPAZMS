# Example environment variables for CfpaZMS
# Copy to .env and fill values

# Flask
FLASK_ENV=development
SECRET_KEY=change-me-to-a-secure-value

# Database
# DATABASE_URL=postgresql://user:pass@localhost:5432/cfpazms

# VAPID keys for Web Push (generate via web-push or pywebpush)
VAPID_PUBLIC_KEY=YOUR_BASE64_URLSAFE_PUBLIC_KEY
VAPID_PRIVATE_KEY=YOUR_BASE64_URLSAFE_PRIVATE_KEY
VAPID_CLAIMS_EMAIL=admin@yourdomain.example

# OAuth / SSO (Google / Azure) credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Other third-party credentials
FIREBASE_CREDENTIALS_JSON_PATH=instance/firebase_credentials.json

# Redis / Celery
REDIS_URL=redis://localhost:6379/0

# Email
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_USE_TLS=True
MAIL_USE_SSL=False
